<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.slowgenius.myblog.mapper.UserMapper">

    <resultMap type="com.slowgenius.myblog.entity.UserEntity" id="userMap">
        <result property="id" column="id"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
    </resultMap>

    <select id="queryObject" resultMap="userMap">
        select * from myblog_user where id = #{id}
    </select>

    <select id="queryByNameAndPassword" resultMap="userMap">
        select *
        from myblog_user
        where user_name = #{userName}
          and password = #{password};

    </select>
</mapper>